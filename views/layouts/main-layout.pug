    body 
        script.
            const userLoggedIn = !{userLoggedInJs}
        div.wrapper
            div.row
                nav.col-2
                    a(href="/").blue
                        i.fa-solid.fa-dove
                    a(href="/")
                        i.fa-solid.fa-house
                    a(href="/search")
                        i.fa-solid.fa-search
                    a(href="/notifications")
                        i.fa-solid.fa-bell
                        span#notificationsBadge
                    a(href="/messages")
                        i.fa-solid.fa-envelope
                        span#messagesBadge
                    a(href="/profile")
                        i.fa-solid.fa-user
                    a(href="/logout")
                        i.fa-solid.fa-sign-out-alt
                div.mainSectionContainer.col-10.col-md-8.col-lg-6
                    div.titleContainer
                        h1 #{pageTitle}
                        block headerButton
                    block content
                div.col-md-2.d-none.d-md-block.col-lg-4
        #notificationList

